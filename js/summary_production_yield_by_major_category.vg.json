{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "hconcat": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/LongDangHoang/fit3179/master/data/processed/production_major_categories_per_country_2000-2020.csv"
      },
      "title": {
        "text": ["Total production (million tonnes)", "of all countries"]
      },
      "mark": "area",
      "params": [
        {
          "name": "hover", 
          "select": {
            "type": "point", 
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ],
      "transform": [
        {"calculate": "datum.Quantity / 1000000", "as": "Production (million tonnes)"}
      ],
      "encoding": {
        "x": {"field": "Year", "type": "quantitative", "axis": {"format": ""}},
        "y": {"aggregate": "sum", "field": "Production (million tonnes)", "title": "Total production (million tonnes)"},
        "color": {"field": "Item Hierarchy Type", "type": "nominal"},
        "tooltip": [
          {"field": "Year", "type": "quantitative"},
          {"field": "Item Hierarchy Type", "type": "nominal", "title": "Product Type"},
          {"aggregate": "sum", "field": "Production (million tonnes)", "title": "Total production (million tonnes)", "type": "quantitative"}
        ],
        "opacity": {
          "condition": {"param": "hover", "value": 1}, 
          "value": 0.4
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/LongDangHoang/fit3179/master/data/processed/yield_major_categories_per_country_2000-2020.csv"
      },
      "title": {
        "text": ["Average yield (tonnes/producing unit)", "of all countries"]
      },
      "transform": [
        {"calculate": "datum.Quantity / 10000", "as": "Yield (tonnes/producing unit)"}
      ],

      "layer": [
        {
          "encoding": {
            "x": {"field": "Year", "type": "quantitative", "axis": {"format": ""}},
            "y": {"aggregate": "average", "field": "Yield (tonnes/producing unit)", "title": "Average yield (tonnes/producing unit)"},
            "color": {"field": "Item Hierarchy Type", "type": "nominal", "legend": {"orient": "right"}}
          },
          "layer": [
            {
              "mark": "line"
            },
            {
              "params": [{
                "name": "label",
                "select": {
                  "type": "point",
                  "encodings": ["x"],
                  "nearest": true,
                  "on": "mouseover",
                  "clear": "mouseout"
                }
              }],
              "mark": "point",
              "encoding": {
                "opacity": {
                  "condition": {
                    "param": "label",
                    "empty": false,
                    "value": 1
                  },
                  "value": 0
                }
              }
            }
          ]
        },
        {
          "transform": [
            {"filter": "datum.Year == label.Year"}
          ],
          "encoding": {
            "x": {"field": "Year", "type": "quantitative", "aggregate": "min", "title": "Year"}
          },
          "layer": [
            {
              "mark": {"type": "rule", "color": "grey"}  
            },
            {
              "transform": [
                {
                  "joinaggregate": [{
                    "op": "mean",
                    "field": "Yield (tonnes/producing unit)",
                    "as": "average_yield"
                  }],
                  "groupby": ["Item Hierarchy Type"]
                },
                {
                  "window": [{"op": "rank", "as": "ranking"}],
                  "groupby": ["Item Hierarchy Type"]
                },
                {
                  "filter": "datum.ranking == 1"
                },
                {"calculate": "format(datum.average_yield, '.3s') + ' tonnes/producing unit'", "as": "text_annotation"}
              ],
              "encoding": {
                "text": {"field": "text_annotation"},
                "y": {"field": "average_yield", "type": "quantitative"},
                "color": {"field": "Item Hierarchy Type", "type": "nominal"}
              },
              "layer": [
                {
                  "mark": {
                    "type": "text",
                    "strokeWidth": 2,
                    "align": "left",
                    "dx": 5,
                    "dy": -5
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}