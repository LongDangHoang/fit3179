{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 300,
  "title": "Cereal production yield (tonnes/ha) in 2020",

  "layer": [
    {
      "data": {
        "graticule": {
          "step": [30, 30]
        }
      },
      "mark": "geoshape",
      "encoding": {
        "strokeWidth": {"value": 0.5},
        "stroke": {"value": "#bbb"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/LongDangHoang/fit3179/master/data/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "projection": {
        "type": "equalEarth"
      },
       "mark": {
         "type": "geoshape", 
         "fill": "lightgrey",
         "stroke": "white"
        }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/LongDangHoang/fit3179/master/data/processed/cereal_yield_per_country_2015-2020.csv"
      },
      "transform": [
        {
          "calculate": "datum.Y2020 / 10000", 
          "as": "Cereal Yield (tonnes/ha)"
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 1
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "Cereal Yield (tonnes/ha)",
          "type": "quantitative",
          "title": "Cereal Yield (tonnes/ha)"
        },
        "color": {
          "field": "Cereal Yield (tonnes/ha)",
          "type": "quantitative",
          "title": "Cereal Yield (tonnes/ha)",
          "scale": {"scheme": "blues"}
        },
        "tooltip": [
          {"field": "Area", "title": "Country"},
          {"field": "Cereal Yield (tonnes/ha)", "title": "Cereal Yield (tonnes/ha)"}
        ]
      }
    }
  ]
}