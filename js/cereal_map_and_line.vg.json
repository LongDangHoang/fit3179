{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/LongDangHoang/fit3179/master/data/processed/cereal_yield_production_per_country_2000-2020.csv"
  },
  "params": [
    {
      "name": "Year_Filter",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2020,
        "step": 1,
        "name": "Year"
      }
    }
  ],
  "title": {
    "text": "Production of Cereal (2000-2020)",
    "anchor": "middle"
  },
  "hconcat": [
    {
      "width": 500,
      "height": 300,
      "projection": {"type": "conicEqualArea", "rotate": [-150, 0, 0]},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": "lightgray"
          },
          "transform": [
            {
                "calculate": "'Data is not available for ' + datum.properties.NAME",
                "as": "note"
            }
          ],
          "encoding": {
            "tooltip": {"field": "note"}
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "lightcyan"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_graticules_30"
            }
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
          "transform": [
            {
              "lookup": "Area",
              "from": {
                  "data": {
                  "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
                  "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                  }
                },
                "key": "properties.NAME"
              },
              "as": "geo"
            },
            {"filter": "datum.Year == Year_Filter"},
            {"filter": "datum.Element == 'Yield'"},
            {
              "calculate": "datum.Quantity / 10000",
              "as": "Cereal Yield (tonnes/ha)"
            }
          ],

          "encoding": {
            "shape": {"field": "geo", "type": "geojson"},
            "description": {"field": "Area"},
            "color": {
              "field": "Cereal Yield (tonnes/ha)",
              "type": "quantitative",
              "title": "Cereal Yield (tonnes/ha)",
              "scale": {
                "domain": [3, 10]
              }
            },
            "tooltip": [
              {"field": "Area", "type": "nominal", "title": "Country"},
              {"field": "Cereal Yield (tonnes/ha)", "type": "quantitative"}
            ]
          },
          "layer": [
            {
              "mark": {
                "type": "geoshape",
                "stroke": "#000", 
                "strokeWidth": 0.5
              },
              "params": [
                {
                  "name": "country_select",
                  "value": "Australia",
                  "select": {"type": "point", "encodings": ["description"]}
                }
              ]
            }
          ],
          "resolve": {"scale": {"color": "independent"}}
        },
        {
          "transform": [
            {"filter": "datum.Year == Year_Filter"},
            {"filter": "datum.Element == 'Yield'"},
            {
              "calculate": "datum.Quantity / 10000",
              "as": "Cereal Yield (tonnes/ha)"
            },
            {
              "window": [{"op": "rank", "as": "ranking"}],
              "sort": [{"field": "Cereal Yield (tonnes/ha)", "order": "descending"}]
            },
            {
              "filter": "datum.ranking == 1"
            },
            {
              "calculate": "'Country with highest yield:;' + datum['Area']",
              "as": "text_annotation_raw"
            },
            {
              "calculate": "split(datum.text_annotation_raw, ';')",
              "as": "text_annotation"
            }
          ],
          "encoding": {
            "latitude": {"field": "latitude"},
            "longitude": {"field": "longitude"}
          },
          "layer": [
            {
              "mark": "point",
              "encoding": {
                "color":  {"value": "purple"},
                "size": {"value": 90}
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "center",
                "dx": -20,
                "dy": 70,
                "baseline": "middle",
                "fontStyle": "italic",
                "fontWeight": "bolder",
                "angle": 0,
                "color": "purple"
              },
              "encoding": {
                "text": {"field": "text_annotation"}
              }
            }
          ]
        }
      ]
    },
    {
      "width": 200,
      "height": 260,
      "transform": [
        {"filter": "datum.Element == 'Yield'"},
        {"filter": "datum.Area == country_select.Area"},
        {
          "calculate": "datum.Quantity / 10000",
          "as": "Cereal Yield (tonnes/ha)"
        }
      ],
      "encoding": {
        "x": {
          "field": "Year", 
          "type": "quantitative",
          "axis": {"format": ""}
        },
        "y": {
          "field": "Cereal Yield (tonnes/ha)", 
          "type": "quantitative",
          "axis": {"grid": false}
        }
      },
      "layer": [
        {
          "title": "Cereal yield of selected country",
          "layer": [
            {
              "mark": "line",
              "encoding": {
                "color":{
                  "value": "darkblue"
                },
                "strokeWidth": {
                  "value": 5
                }
              }
            },
            {
              "transform": [
                {"filter": "datum.Year == Year_Filter"}
              ],
              "mark": "point",
              "encoding": {
                "color": {"value": "blue"},
                "size": {"value": 48}
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "right",
                "dx": 0,
                "dy": 40,
                "baseline": "middle",
                "fontStyle": "italic",
                "fontSize": 16,
                "color": "blue"
              },
              "transform": [
                {"filter": "datum.Area == country_select.Area"},
                {"filter": "datum.Year == 2020"}
              ],
              "encoding": {
                "text": {"field": "Area", "title": "Country"},
                "x": {"field": "Year", "type": "quantitative"},
                "y": {"field": "Cereal Yield (tonnes/ha)", "type": "quantitative"}
              }
            },
            {
              "transform": [
                {"filter": "datum.Year == Year_Filter"}
              ],
              "mark": {
                "type": "rule", "color": "grey"
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -8,
                "dy": 10,
                "baseline": "middle",
                "fontStyle": "italic",
                "fontSize": 9,
                "color": "blue"
              },
              "transform": [
                {"filter": "datum.Year == Year_Filter"},
                {"calculate": "'Cereal Yield:;' + datum['Cereal Yield (tonnes/ha)'] + ' (tonnes/ha)'", "as": "text_annotation_raw"},
                {"calculate": "split(datum.text_annotation_raw, ';')", "as": "text_annotation"}
              ],
              "encoding": {
                "text": {"field": "text_annotation"},
                "x": {"field": "Year", "type": "quantitative"},
                "y": {"field": "Cereal Yield (tonnes/ha)", "type": "quantitative"}
              }
            }
          ]
        }
      ]
    }
  ],
  "config": {"title": {"font": "sans-serif", "fontSize": 16}}
}